{
  "name": "Plugin: Spotify",
  "permissions": {
    "network": "Needs to access the Spotify API"
  },
  "options": [
    {
      "title": "Spotify",
      "type": "section"
    },
    {
      "title": "Accounts",
      "name": "accounts",
      "type": "list",
      "itemname": "Account",
      "items": [
        {
          "title": "Name",
          "ui_width": 6,
          "name": "account_name",
          "type": "string",
          "default": "Name"
        },
        {
          "title": "Market",
          "ui_width": 6,
          "name": "market",
          "type": "string",
          "default": "US"
        },

        {
          "title": "Presentation",
          "type": "section"
        },

        {
          "title": "Font",
          "ui_width": 6,
          "name": "font",
          "type": "font",
          "doc_link": true,
          "default": "circular-book.ttf"
        },
        {
          "title": "Fallback Asset",
          "ui_width": 6,
          "name": "fallback_asset",
          "type": "resource",
          "valid": ["image"],
          "default": "node.png"
        },
        {
          "title": "Theme color",
          "ui_width": 3,
          "name": "theme_color",
          "type": "color",
          "default": [0.1, 0.62, 0.28, 1]
        },
        {
          "title": "Font color",
          "ui_width": 3,
          "name": "font_color",
          "type": "color",
          "default": [0, 0, 0, 1]
        },
        {
          "title": "Background color",
          "ui_width": 3,
          "name": "bg_color",
          "type": "color",
          "default": [1, 1, 1, 1]
        }
      ]
    },

    {
      "title": "Authentication",
      "type": "section"
    },
    {
      "title": "Client ID",
      "ui_width": 6,
      "name": "client_id",
      "type": "string",
      "default": ""
    },
    {
      "title": "Client Secret",
      "ui_width": 6,
      "name": "client_secret",
      "type": "string",
      "default": ""
    },
    {
      "title": "Refresh Token",
      "ui_width": 6,
      "name": "refresh_token",
      "type": "string",
      "default": ""
    }
  ],
  "deferred": ["tile.lua"]
}
